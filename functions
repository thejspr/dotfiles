#Automatically do an ls after each cd
cd() {
  if [ -n "$1" ]; then
    builtin cd "$@" && ls
  else
    builtin cd ~ && ls
      fi
}

# mkdir, cd into it
mkcd () {
  mkdir -p "$*"
    cd "$*"
}

#show current external ip.
function myip {
  myip=`elinks -dump http://checkip.dyndns.org:8245/`
    echo "${myip}"
}
