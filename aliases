  command git add -A;
  command git commit -m "$*";
}
alias gb='git branch'
alias gbX='git branch --delete --force'
alias gbx='git branch --delete'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gd='git d'
alias gg='git grep'
alias gl='git l'
alias gp='git push'
alias gpf='FORCE=1 git push --force-with-lease'

