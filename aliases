# todo.txt-cli
function t() {
  if [ $# -eq 0 ]; then
    ~/repos/todo.txt-cli/todo.sh -d ~/Dropbox/todo/todo.cfg ls
  else
    ~/repos/todo.txt-cli/todo.sh -d ~/Dropbox/todo/todo.cfg $*
    ~/repos/todo.txt-cli/todo.sh -d ~/Dropbox/todo/todo.cfg ls
  fi
}
# rvm
function wrvm() {
  if [ $# -eq 0 ]; then
    rvm current
  else
    rvm $*   
  fi
}
# edit
alias gvimt='gvim --remote-tab-silent'
alias gv='gvim --remote-tab-silent'
sgv() { sudo gvim --remote-tab-silent "$1" &; }
alias sv='sudo vim $1'
alias e='vim'

# tmux
alias ltmux="if tmux has; then tmux attach; else tmux new; fi"

# git
gpush() { git add -A; git commit -m "$*"; git push; }
g() {
  if [[ $# == '0' ]]; then
    command git status
  else
    command git "$@";
  fi
}
# sass
alias sassw='sass --watch public/stylesheets/sass/:public/stylesheets'

# ctags
alias rctags='ctags -R --exclude=.git --exclude=log --exclude=public *'

# ruby & rails
alias r='rails $*'
alias rs='rails server'
alias rc='rails console'
alias gemup='gem update --system && gem update'
# heroku
hpush() { git add -A; git commit -a -m 'automatic'; git push heroku master; heroku rake db:migrate; }
alias h='heroku $*'

# latex
alias lmkp='latexmk -pvc -pdf'
alias lmk='latexmk $*'

# servers
alias prgmr='ssh jkjeldgaard.xen.prgmr.com'
alias prgs='ssh theprogress.net'
alias award='ssh -p 2222 jkjeldgaard@jsprk.dk'

# apache
alias ares='sudo /etc/init.d/apache2 restart'

# misc
alias sabres='pkill sabnzbdplus && sabnzbdplus --daemon'

# aptitude conviniences
alias ain='sudo apt-get install $* -y'
alias aun='sudo apt-get remove'
alias afi='sudo apt-cache search'
alias aup='sudo apt-get update && sudo apt-get upgrade -y'
alias aclean='sudo apt-get autoclean && sudo apt-get autoremove && sudo apt-get clean && sudo apt-get remove'

# files, directories and commands
alias mx='chmod a+x $*'
alias cd..='cd ..'
alias ls='ls --color=auto'
alias ll='ls -lA --color=auto'
alias grep='grep --color=auto'
alias du='du -h'
alias df='df -h'

# system and files editing
alias a='alias'
alias ea='vim ~/.aliases'
alias ez='vim ~/dotfiles/zshrc'
alias ez_='vim ~/dotfiles/_zshrc'
alias aprox='apropos'
alias sr='source ~/.zshrc'
alias goals='vim ~/Dropbox/privat/goals.txt'
