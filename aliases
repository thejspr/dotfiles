#heroku
alias h="heroku"
hpush() { git add -A; git commit -m "$*"; git push; git push production master; }
alias hc="heroku run rails console"
alias hp="git push production master"
alias hl="heroku logs -t"

#testing
bes() {
  if [ -f './bin/rspec' ]; then
    ./bin/rspec $*
  else
    bundle exec rspec $*
  fi
}
alias specs='z tmc && rspec --tag ~type:feature'
alias fspecs='z tmc && rspec --tag type:feature'
alias aspecs='fspecs && specs'

