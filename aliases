# edit existing command or create a new script
function ew() {
  if [[ -f `which "$1"` ]]; then
    e `which "$1"`
  else
    echo "#!/usr/bin/env " > ~/clearhaus/bin/"$1"
    chmod +x ~/clearhaus/bin/"$1"
    e ~/clearhaus/bin/"$1"
  fi
}

