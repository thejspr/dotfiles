# todo
alias t='todo $*'

# edit
alias gvimt='gvim --remote-tab-silent'
alias gv='gvim'
sgv() { sudo gvim --remote-tab-silent "$1" &; }
sv() { sudo vim --remote-tab-silent "$1" &; }

# tmux
alias ltmux="if tmux has; then tmux attach; else tmux new; fi"

# git
gitp() { git add -A; git commit -m "$*"; git push; }
alias git='nocorrect git $*'

# sass
alias sassw='sass --watch public/stylesheets/sass/:public/stylesheets'

# ruby & rails
alias r='rails $*'
alias rs='rails server'
alias rc='rails console'
alias gemup='gem update --system && gem update'
alias nres='sudo /etc/init.d/nginx restart'
# heroku
hpush() { git add -A; git commit -a -m "$*"; git push heroku master; heroku rake db:migrate; }
alias h='heroku $*'

# latex
alias lmkp='latexmk -pvc -pdf'
alias lmk='latexmk $*'

# servers
alias prgmr='ssh jkjeldgaard.xen.prgmr.com'
alias award='ssh -p 2222 jkjeldgaard@jsprk.dk'

# apache
alias ares='sudo /etc/init.d/apache2 restart'
alias elog='tail -f /var/log/apache2/error.log'

# misc
alias sab='sabnzbdplus --daemon'
alias sabres='pkill sabnzbdplus && sabnzbdplus --daemon'

# aptitude conviniences
alias ain='sudo apt-get install $* -y'
alias aun='sudo apt-get remove'
alias afi='sudo apt-cache search'
alias aup='sudo apt-get update && sudo apt-get upgrade -y'
alias aclean='sudo apt-get autoclean && sudo apt-get autoremove && sudo apt-get clean && sudo apt-get remove'

# files, directories and commands
alias mx='chmod a+x $*'
alias cd..='cd ..'
alias ls='ls --color=auto'
alias ll='ls -lA --color=auto'
alias grep='grep --color=auto'
alias du='du -h'
alias df='df -h'

# system
alias a='alias'
alias ea='gvim --remote-tab-silent ~/.aliases & sr'
alias ez='gvim --remote-tab-silent ~/dotfiles/zshrc & sr'
alias aprox='apropos'
alias off='sudo shutdown -h now'
alias sr='source ~/.zshrc'
