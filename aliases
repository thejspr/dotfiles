# new
alias ff='find . -iname'
mkcd() { dir="$*"; mkdir -p "$dir" && cd "$dir"; }

# tmux
alias mx='tmuxinator'
alias tma='tmux attach -t'
emx(){ mvim -v ~/.tmuxinator/$@.yml }

#ruby
alias rb='rbenv'
alias rv='rbenv version'
alias wr='ps aux | grep ruby'
alias kf='kill -9 %1'
alias kk='kill -9'
alias be='bundle exec'
alias rs='rails s'
alias rg='rails g'
alias rc='rails c'
alias migrate='be rake db:migrate'

#rake
alias rt='be rake -T'
alias rr='be rake routes'

#heroku
alias h="heroku"
hpush() { git add -A; git commit -m "$*"; git push; git push production master; }
alias hc="heroku run console"
alias hl="heroku logs -t"

#testing
alias sg='bundle exec guard'
alias bec='be cucumber'
bes() {
  if [ -f './bin/rspec' ]; then
    ./bin/rspec $*
  else
    bundle exec rspec $*
  fi
}
alias specs='z tmc && rspec --tag ~type:feature'
alias aspecs='z tmc && rspec --tag type:feature && specs'
alias skarma='z client && grunt karma'

#vim
alias e='mvim -v'
alias vim='mvim -v'

# homebrew
alias bup='brew update && echo "==> Outdated Formula" && brew outdated && brew cleanup'
alias bu='brew upgrade'

#conviniences
alias -g V='|e -'
alias -g G='|grep --color'
alias -g A='|ag --color'

#git
g() {
  if [[ $# == '0' ]]; then
    command git status -sb
  else
    command git "$@";
  fi
}
gcam() {
  command git add -A;
  command git commit -m "$*";
}
alias gd='g d'
alias gl='g l'
alias gr='g r'
alias gc='g commit -v'
alias git-new-workdir='~/Code/libs/git/contrib/workdir/git-new-workdir'
alias gpr='gpc && hub browse'

#msc
myip() { elinks -dump http://checkip.dyndns.org:8245/ }
alias cd..='cd ..'
alias ll='ls -la'

# system and files editing
alias ea='e ~/Code/dotfiles/aliases'
alias eg='e ~/Code/dotfiles/gitconfig'
alias ez='e ~/Code/dotfiles/zsh_mods'
alias ezz='e ~/.zpreztorc'
alias et='e ~/Code/dotfiles/tmux.conf'
alias es='e ~/.ssh/config'
alias sr='exec zsh'
