# Vim
alias vim='mvim'
alias e='mvim'

# Evently
alias li='LIVE=true'
alias lr='LIVE=true RISKY=true'
alias dq='DO_NOT_QUIT_BROWSER=true'

# conviniences
alias -g A='|ack'
alias -g L='|less'
alias -g V='|vim -'
alias -g M='|mvim -'
alias -g G='|grep'
alias -g T='|tail'
alias -g H='|head'
alias -g N='&>/dev/null&'
alias -g W='|wc'

# git
gpush() { git add -A; git commit -m "$@"; git push; }
g() {
  if [[ $# == '0' ]]; then
    command hub status -sb
  else
    command hub "$@";
  fi
}

alias git='hub'
alias gl='git log --oneline --decorate -20'
alias gdw='git diff --word-diff'

# rails

# launching console/server
rc () {
  if [ -f ./script/rails ]; then
    rails c $@
  else
    ./script/console $@
  fi
}

rg () {
  if [ -f ./script/rails ]; then
    rails g $@
  else
    ./script/generate $@
  fi
}

rs () {
  if [ -f ./script/rails ]; then
    rails s $@
  else
    ./script/server $@
  fi
}

# rails logs, tailing and cleaning
alias tdl='tail -f ./log/development.log'
alias ttl='tail -f ./log/test.log'

# ctags
alias rctags='ctags -R --exclude=.git --exclude=log --exclude=public *'

# rubygems
alias gin='gem install'
alias gun='gem uninstall'
alias gemup='gem update --system && gem update'

# ruby
alias rb='rbenv'
alias rv='ruby -v'

# heroku
alias h="heroku"
hpush() { git add -A; git commit -m $*; git push heroku master; }

# servers
alias prgs='ssh thejspr.com'

# files, directories and commands
alias mx='chmod a+x'
alias cd..='cd ..'
alias ll='ls -lA'
alias grep='grep --color=auto'

# system and files editing
alias ea='vim ~/.aliases'
alias ez='vim ~/Code/dotfiles/zshrc'
alias ez_='vim ~/Code/dotfiles/_zshrc'
alias sr='source ~/.zshrc'

# aptitude conviniences
alias ain='sudo apt-get install $@ -y'
alias aun='sudo apt-get remove'
alias afi='sudo apt-cache search'
alias aup='sudo apt-get update && sudo apt-get upgrade -y'
alias aclean='sudo apt-get autoclean && sudo apt-get autoremove && sudo apt-get clean && sudo apt-get remove'
