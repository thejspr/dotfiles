#git
g() {
  if [[ $# == '0' ]]; then
    command git status -sb
  else
    command git "$@";
  fi
}
gcam() {
  command git add -A;
  command git commit -m "$*";
}
alias gd='g d'
alias gl='g l'
alias gr='g r'
alias gc='g commit -v'

