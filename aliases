#rails
alias tt='tail -f log/test.log | grep -v "TRUNCATE"'
alias migrate='br db:migrate db:test:clone_structure'
alias ber='be rails'
alias rsp='ber server puma'

rc () {
  if [ -f ./script/rails ]; then
    rails c $@
  else
    ./script/console --irb=pry $@
  fi
}

rg () {
  if [ -f ./script/rails ]; then
    rails g $@
  else
    ./script/generate $@
  fi
}

rs () {
  if [ -f ./script/rails ]; then
    rails s $@
  else
    ./script/server $@
  fi
}


