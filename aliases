# new
alias ff='find . -iname'
dash(){ open "dash://$@" }
alias mx='tmuxinator'
emx(){ vim ~/.tmuxinator/$@.yml }

# work
alias r2c='./script/console --irb=pry'
alias ts='be thin start'
alias bsc='be spork cucumber'
alias resass='be compass clean && be compass compile'
nb(){
  git co -b host-nps/$@
}
export STG='staging6'

#servers
