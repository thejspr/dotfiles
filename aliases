#git
g() {
  if [[ $# == '0' ]]; then
    command git status -sb
  else
    command git "$@";
  fi
}
alias gd='g d'
alias gl='g l'
alias gr='g r'
push_branch() {
  branch_name=$(git symbolic-ref HEAD 2>/dev/null | cut -d"/" -f 3)
  git push --set-upstream origin $branch_name

  if [[ ! $# == '0' ]]; then
    git pull-request
  fi

  git browse
}

