unalias gbr 2>/dev/null # exists in bin
[ "$(command -v gcam)" ] && unalias gcam
gcam() {
  command git add -A;
  command git commit -m "$*";
}
gpush() {
  command git add -A;
  command git commit -m "$*";
  command git push
}
