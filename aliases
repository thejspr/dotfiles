#vim
if $JSPRMAC; then
  alias e='mvim -v'
  alias vim='mvim -v'
  alias bup='brew update && echo "==> Outdated Formula" && brew outdated && brew cleanup'
  alias bu='brew upgrade'
else
  alias e='vim'
  alias aup='sudo apt-get update && sudo apt-get upgrade && sudo apt-get autoclean && sudo apt-get autoremove'
fi

alias vim'e'
alias vi='vim'

