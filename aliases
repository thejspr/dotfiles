# new
alias ff='find . -iname'
mkcd() { dir="$*"; mkdir -p "$dir" && cd "$dir"; }
alias nb='npm run build'
alias gpf='FORCE=1 git push'

# tmux
alias tma='tmux attach -t'
alias tms='tmux start-server; tmux attach'

#ruby
alias rb='rbenv'
alias rv='rbenv version'
alias wr='ps aux | grep ruby'
alias kf='kill -9 %1'
alias kk='kill -9'
alias be='bundle exec'
alias rs='rails s'
alias rg='rails g'
alias rc='rails c'
alias migrate='rake db:migrate db:test:prepare'
alias upgrade_gems="bundle update && rspec && git add -A && git commit -m 'Gem upgrades' && git push"

#rake
alias rt='rake -T'
