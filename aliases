# edit existing command or create a new script
function ew() {
  if [[ -f `which "$1"` ]]; then
    e `which "$1"`
  else
    echo "#!/usr/bin/env " > ~/bin/"$1"
    chmod +x ~/bin/"$1"
    e ~/bin/"$1"
  fi
}
alias tma='tmux attach'

