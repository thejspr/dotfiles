#git
g() {
  if [[ $# == '0' ]]; then
    command hub status -sb
  else
    command hub "$@";
  fi
}
grmb() { git push origin :"$@"; git branch -D "$@" }

alias gd='g d'
alias gl='g l'
alias gr='g r'

#bundler
alias bs='bundle show'

