#git
g() {
  if [[ $# == '0' ]]; then
    command git status -sb
  else
    command git "$@";
  fi
}
alias gd='g d'
alias gl='g l'
alias gr='g r'
alias gc='g commit -v'
push_branch() {
  branch_name=$(git symbolic-ref HEAD 2>/dev/null | cut -d"/" -f 3)
  git push --set-upstream origin $branch_name

  if [[ ! $# == '0' ]]; then
    hub pull-request
  fi

  hub browse
}

