[user]
  name = Jesper Kjeldgaard
  email = thejspr@gmail.com
[github]
  user = thejspr
[color]
	ui = auto
[mergetool]
  keepBackup = false
	prompt = false
[push]
	default = tracking
[core]
  excludesfile = /Users/jesper/.gitignore
  editor = mvim -v
	whitespace = trailing-space,space-before-tab
[alias]
  aa = add --all
  c = commit -v
  d = diff
  dc = diff --cached
  ms = checkout master
  co = checkout
  b = branch
  ls = log --oneline --decorate --graph -20
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(black)<%an>%Creset' --abbrev-commit --date=relative -20
  r = remote
  rc = !git add -A && git rebase --continue
  rbm = !git checkout master && git pull && git checkout - && git rebase master
  amend = !git add -A && git commit -v --amend
  amendf = !git add -A && git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  amendff = !git amendf && git push -ff
  wip = !git add --all && git commit -m 'wip'
  ribbon = tag --force _ribbon origin/master
  catchup = log --patch --reverse --topo-order _ribbon..origin/master
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
[apply]
  whitespace = nowarn
[branch]
	autosetupmerge = true
  autosetuprebase = always
[advice]
	pushNonFastForward = false
	statusHints = false
[diff]
	renames = copies
	mnemonicprefix = true
	tool = vimdiff
[merge]
	stat = true
	tool = vimdiff
[difftool]
	prompt = false
