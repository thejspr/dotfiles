[user]
  name = Jesper Kjeldgaard
  email = jkjeldgaard@housetrip.com
  ; email = thejspr@gmail.com
[github]
  user = thejspr
[color]
	ui = auto
[mergetool]
  keepBackup = false
	prompt = true
[push]
	default = tracking
[core]
	excludesfile = ~/.gitignore
  editor = vim
	whitespace = trailing-space,space-before-tab
[alias]
  aa      = add --all
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^= ]*\\)=\\(.*\\)/\\1\\\t=> \\2/' | sort
  amend   = !git add -A && git commit -v --amend
  amendf  = !git add -A && git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  amendff = !git amendf && git push -ff
  b       = branch
  c       = commit -v
  ca      = !git add -A && git commit -v
  co      = checkout
  d       = diff
  ds      = diff --stat
  dc      = diff --cached
  dcs     = diff --cached --stat
  l       = log --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %C(black)<%an>%Creset' --abbrev-commit --date=relative --no-merges -15
  lm      = log --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %C(black)<%an>%Creset' --abbrev-commit --date=relative -15
  ms      = checkout master
  r       = remote
  rbm     = !git checkout master && git pull && git checkout - && git rebase master
  rc      = !git add -A && git rebase --continue
  wip     = !git add --all && git commit -m 'wip'
  ribbon  = tag --force _ribbon origin/master
  catchup = log --patch --reverse --topo-order _ribbon..origin/master
  edit    = !mvim -v `git status --porcelain | sed -ne 's/^ M //p'`

  int     = checkout hosts-nps/integration/catalogue-phase-01-535647
  stg     = checkout staging2.hosts
[apply]
  whitespace = nowarn
[branch]
	autosetupmerge = true
  autosetuprebase = always
[advice]
	pushNonFastForward = false
	statusHints = false
[diff]
	renames = copies
	mnemonicprefix = true
[merge]
	stat = true
	tool = vimdiff
	prompt = false
[difftool]
	prompt = false
[pivotal]
	full-name = Jesper Kjeldgaard
