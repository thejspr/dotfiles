[user]
  name = Jesper Kjeldgaard
  email = thejspr@gmail.com
[github]
  user = thejspr
[color]
	ui = auto
[mergetool]
  keepBackup = false
	prompt = false
[push]
	default = tracking
[core]
  excludesfile = /Users/jesper/.gitignore
  editor = mvim -v
	whitespace = trailing-space,space-before-tab
[alias]
  aa = add --all
  c = commit -v
  d = diff
  ms = checkout master
  co = checkout
  b = branch
  l = !git log --oneline --decorate --graph -20
  r = remote
  rc = !git add -A && git rebase --continue
  ribbon = tag --force _ribbon origin/master
  amend = !git add --all && git commit -v --amend
  catchup = log --patch --reverse --topo-order _ribbon..origin/master
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
[apply]
  whitespace = nowarn
[branch]
	autosetupmerge = true
  autosetuprebase = always
[advice]
	pushNonFastForward = false
	statusHints = false
[diff]
	renames = copies
	mnemonicprefix = true
	tool = vimdiff
[merge]
	stat = true
	tool = vimdiff
[difftool]
	prompt = false
