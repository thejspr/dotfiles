[user]
  name = Jesper Kjeldgaard
  email = jkjeldgaard@housetrip.com
  ; email = thejspr@gmail.com
[github]
  user = thejspr
[color]
  ui = auto
[mergetool]
  keepBackup = false
  prompt = true
[push]
  default = tracking
[core]
  excludesfile = ~/.gitignore
  editor = vim
  whitespace = trailing-space,space-before-tab
[alias]
  a      = add --all
  aa     = add -A
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^= ]*\\)=\\(.*\\)/\\1\\\t=> \\2/' | sort
  amend   = !git add -A && git commit -v --amend
  amendf  = !git add -A && git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  amendff = !git amendf && git push -ff
  b       = branch
  c       = commit -v
  ca      = !git add -A && git commit -v
  co      = checkout
  ctags   = !.git/hooks/ctags
  d       = diff
  dc      = diff --cached
  dcs     = diff --cached --stat
  ds      = diff --stat
  edit    = !git status -sb | tail +2 | grep -v '^ D' | awk '{print $2}' | xargs -o mvim -v -p
  l       = log --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %C(black)<%an>%Creset' \
                --abbrev-commit \
                --date=relative -14
  ms      = checkout master
  mt      = mergetool
  mm      = !git fetch && git merge origin/master
  r       = remote
  rc      = !git add -A && git rebase --continue
  wip     = !git add --all && git commit -m 'wip'
  res     = !git reset head~1

  int     = !git checkout $INT
  stg     = !git checkout $STG

  cleanup = !git remote prune origin && git prune && git gc &&  git branch --merged
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
[advice]
  pushNonFastForward = false
  statusHints = false
[diff]
  renames = copies
  mnemonicprefix = true
[merge]
  stat = true
  tool = vimdiff
  prompt = false
[difftool]
  prompt = false
[pivotal]
  full-name = Jesper Kjeldgaard
[init]
  templatedir = ~/.git_template
[gc]
  auto = 0
