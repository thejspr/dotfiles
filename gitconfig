[user]
  name = Jesper Kjeldgaard
  email = thejspr@gmail.com
[github]
  user = thejspr
[color]
  ui = auto
[push]
  default = tracking
[core]
  excludesfile = ~/.gitignore
  editor = mvim -v
  whitespace = trailing-space,space-before-tab
  ignorecase = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
  a      = add --all
  aa     = add -A
  amend  = commit -a --amend
  amendf = !git add -A && git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  b      = branch
  c      = commit -v
  ca     = !git add -A && git commit -v
  co     = checkout
  ci     = !hub ci-status -v | awk '{print $2}' | xargs open
  d      = !clear && git diff
  dev    = checkout develop
  dc     = diff --cached
  dcs    = diff --cached --stat
  dm     = !clear && git diff master
  ds     = diff --stat
  edit   = !git status -sb | tail +2 | grep -v '^ D' | awk '{print $2}' | xargs -o mvim -v
  ediff  = !git diff master --stat | awk '{print $1}' | grep -i \\d | xargs vim
  gc     = gc --prune=now
  l      = log --oneline --decorate -16
  ll     = log --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %C(black)<%an>%Creset' \
               --abbrev-commit \
               --date=relative -16
  ms     = checkout master
  pro    = checkout production
  mt     = mergetool
  mm     = merge master
  r      = remote
  rc     = !git add -A && git rebase --continue
  rh     = reset --hard
  wip    = !git add --all && git commit -m 'WIP'
  undo   = reset head~1 --mixed

  stg    = !git checkout staging
  mstg   = !git checkout staging && git pull && git merge -

  cl = !git co master && git pull && git remote prune origin && git bclean
  bclean = "!f() { git branch --merged ${1-master} | grep -vE '(master|production|release)' | xargs git branch -d; }; f"


  dcl = !git co develop && git pull && git remote prune origin && git dbclean
  dbclean = "!f() { git branch --merged ${1-develop} | grep -vE '(master|develop|release)' | xargs git branch -d; }; f"
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
[advice]
  pushNonFastForward = false
  statusHints = false
[diff]
  renames = copies
  mnemonicprefix = true
  algorithm = patience
[gc]
  auto = 0
[heroku]
  account = me
[mergetool "mvimdiff"]
  cmd = /usr/local/bin/mvimdiff -v -d -f "$LOCAL" "$MERGED" "$REMOTE"
[merge]
  tool = mvimdiff
[mergetool]
  prompt = false
  keepBackup = false
[difftool "gvimdiff"]
  path = /usr/local/bin/mvimdiff
[diff]
  tool = vimdiff
  guitool = gvimdiff
[difftool]
  prompt = false
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
