[user]
  name = Jesper Kjeldgaard
  email = jkjeldgaard@housetrip.com
  ; email = thejspr@gmail.com
[github]
  user = thejspr
[color]
  ui = auto
[mergetool]
  keepBackup = false
  prompt = true
[push]
  default = tracking
[core]
  excludesfile = ~/.gitignore
  editor = vim
  whitespace = trailing-space,space-before-tab
  pager = less -FRX
[alias]
  a      = add --all
  aa     = add -A
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^= ]*\\)=\\(.*\\)/\\1\\\t=> \\2/' | sort
  amend   = !git add -A && git commit -v --amend
  amendf  = !git add -A && git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  amendff = !git amendf && git push -ff
  b       = branch
  c       = commit -v
  ca      = !git add -A && git commit -v
  catchup = log --patch --reverse --topo-order _ribbon..origin/master
  co      = checkout
  ctags   = !.git/hooks/ctags
  d       = diff
  dc      = diff --cached
  dcs     = diff --cached --stat
  ds      = diff --stat
  edit    = !git status -sb | awk '{print $2}' | xargs -o mvim -v
  l       = log --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %C(black)<%an>%Creset' --abbrev-commit --date=relative -14
  lm      = log --graph --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %C(black)<%an>%Creset' --abbrev-commit --date=relative  --no-merges -15
  ms      = checkout master
  mt      = mergetool
  r       = remote
  rbm     = !git checkout master && git pull && git checkout - && git rebase master
  rc      = !git add -A && git rebase --continue
  ribbon  = tag --force _ribbon origin/master
  wip     = !git add --all && git commit -m 'wip'

  int     = !git checkout $INT
  stg     = !git checkout $STG
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
[advice]
  pushNonFastForward = false
  statusHints = false
[diff]
  renames = copies
  mnemonicprefix = true
[merge]
  stat = true
  tool = vimdiff
  prompt = false
[difftool]
  prompt = false
[pivotal]
  full-name = Jesper Kjeldgaard
[init]
  templatedir = ~/.git_template
[gc]
  auto = 1
