export EDITOR='nvim'
eval "$(rbenv init - --no-rehash)"
export PATH=/usr/local/bin:/usr/local/share/npm/bin:$PATH
export PATH=./bin:~/bin:/Applications/Postgres.app/Contents/Versions/9.4/bin:$PATH
export PATH="$PATH:$HOME/.yarn/bin"

# Android
export JAVA_HOME=$(/usr/libexec/java_home)
export PATH=/Users/jesper/Library/Android/sdk/platform-tools:$PATH
export PATH=/Users/jesper/Library/Android/sdk/tools:$PATH
export PATH=/Users/jesper/Library/Android/sdk/build-tools/24.0.3:$PATH
export ANDROID_HOME=/Users/jesper/Library/Android/sdk

# prezto customizations
autoload zmv
bindkey -e
compdef g=git
fpath=(/usr/local/share/zsh-completions $fpath)
alias tar='/usr/local/bin/gtar'

# Ruby
export RUBY_BUILD_CACHE_PATH=true
export RUBY_HEAP_SLOTS_INCREMENT=10000
export RUBY_HEAP_SLOTS_GROWTH_FACTOR=1.8
export RUBY_GC_MALLOC_LIMIT=59000000
export RUBY_HEAP_FREE_MIN=100000

# hub alias
eval "$(hub alias -s)"

# https://github.com/rupa/z
. /usr/local/etc/profile.d/z.sh

# Alias and function definitions.
. ~/code/dotfiles/aliases

fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line
  else
    zle push-input
    zle clear-screen
  fi
}
zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z

# Golang
export GOPATH=$HOME/Code/go
export PATH=$PATH:/usr/local/opt/go/libexec/bin

source ~/.secrets

export NVM_DIR="$HOME/.nvm"
. "$(brew --prefix nvm)/nvm.sh"
