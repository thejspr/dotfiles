# https://github.com/rupa/z
. ~/repos/z/z.sh
function precmd () {
  z --add "$(pwd -P)"
}

# Alias and function definitions.
if [ -f ~/.aliases ]; then
    . ~/.aliases
fi
if [ -f ~/.functions ]; then
    . ~/.functions
fi

# disable terminal locking
stty -ixon -ixoff

unsetopt correct_all

export EDITOR=vim

# specific things for laptop and server
if [ "$HOST" = "vision" ]; then
  export PATH=${PATH}:$HOME/apps/android-sdk-linux_x86/tools:$HOME/bin/:$HOME/local/node/bin:/opt/nginx/sbin:$HOME/apps/eclipse
elif [ "$HOST" = "theprogress" ]; then
  export PATH=${PATH}:/opt/nginx/sbin
  cd ~/repos/dotfiles
  git pull
  cd
fi

