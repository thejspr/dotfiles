# https://github.com/rupa/z
. ~/repos/z/z.sh
function precmd () {
  z --add "$(pwd -P)"
}

# Alias and function definitions.
if [ -f ~/.aliases ]; then
    . ~/.aliases
fi
if [ -f ~/.functions ]; then
    . ~/.functions
fi

# disable terminal locking
stty -ixon -ixoff

unsetopt correct_all

export EDITOR=vim

# specific things for laptop and server
if [ "$HOST" = "vision" ]; then
  export PATH=${PATH}:$HOME/apps/android-sdk-linux_x86/tools:$HOME/apps/eclipse:$HOME/bin
elif [ "$HOST" = "theprogress" ]; then
  export PATH=${PATH}:/opt/nginx/sbin
  export RAILS_ENV=production
fi

export AUTOFEATURE=true
export JRUBY_OPTS=--1.9
export RBXOPT=-X19
# export RUBYOPT="-r`gem which perftools | tail -1`"
# export CPUPROFILE=/tmp/myrbprof

# Haskell
export PATH=$PATH:~/.cabal/bin

cp ~/repos/sabnzbd.ini ~/.sabnzbd/
