# Please see https://i3wm.org/docs/userguide.html for a complete reference!
set $mod Mod4

font pango:JetBrainsMono 0

bar {
  status_command i3status --config ~/.i3status.conf
  font pango:JetBrainsMono 12
  tray_output DP-4
  separator_symbol " | "
  position top
  padding 1
  tray_padding 4

  colors {
    background #1a1b26
    statusline #a9b1d6

    focused_workspace  #15161e #7aa2f7
    active_workspace   #ffffff #c0caf5
    inactive_workspace #888888 #222222
    urgent_workspace   #ffffff #900000
  }
}

exec --no-startup-id "picom -b --config ~/.config/picom.conf"

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
# exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
bindsym $mod+Home exec --no-startup-id i3lock
bindsym $mod+End exec --no-startup-id sudo pm-suspend

# Desktop media control
bindsym $mod+Up exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+Down exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+m exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym $mod+Return exec playerctl play-pause
bindsym $mod+Right exec playerctl next
bindsym $mod+Left exec playerctl previous

focus_follows_mouse yes

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+q kill

# start program launcher
bindsym $mod+d exec --no-startup-id "rofi -combi-modi window,drun -theme solarized -font 'JetBrainsMono 14' -show combi -icon-theme 'Papirus' -show-icons"
bindsym $mod+g exec --no-startup-id echo "" | rofi -dmenu -p "Search:" | xargs -I{} xdg-open https://www.google.dk/search?q={}

# define directional keys
set $up k
set $down j
set $left h
set $right l

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# split in horizontal orientation
# bindsym $mod+h split |

# split in vertical orientation
# bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5

bindsym $mod+p move workspace to output right

# reload or restart i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
  bindsym $left resize shrink width 10 px or 10 ppt
  bindsym $right resize grow width 10 px or 10 ppt
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# screenshot
bindsym $mod+x exec flameshot gui

# file-browser
bindsym $mod+n exec nautilus ~/Downloads

# Show a floating calc terminal with Mod+c https://github.com/Qalculate/libqalculate
for_window [instance="Alacritty" title="My Calculator"] floating enable
bindsym $mod+c exec alacritty -t "My Calculator" -e qalc

# Show todos
for_window [instance="Alacritty" title="My Todos"] floating enable
bindsym $mod+t exec alacritty -t "My Todos" -e nvim ~/notes/peanut/todo.md

# Floating vim
for_window [instance="Alacritty" title="Temp Vim"] floating enable
bindsym $mod+v exec alacritty -t "Temp Vim" -e ~/bin/tempvim

# Fix handing of popups
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Application specific assignments
assign [class="Alacritty"] $ws1
assign [class="google-chrome"] $ws1
assign [class="obsidian"] $ws2

assign [class="Slack"] $ws4
assign [class="firefox"] $ws3

assign [class="spotify"] $ws4

# Multi monitor settings
set $main_monitor DP-4
set $second_monitor HDMI-0

workspace $ws1 output $main_monitor
workspace $ws2 output $main_monitor
workspace $ws3 output $second_monitor
workspace $ws4 output $second_monitor
workspace $ws5 output $main_monitor

# Background apps
# exec --no-startup-id ~/code/dotfiles/scripts/auto-brightness
exec --no-startup-id feh --randomize --bg-fill ~/Files/wallpapers/*
exec --no-startup-id nm-applet
exec --no-startup-id pulseaudio --daemonize
exec --no-startup-id pasystray
exec --no-startup-id copyq
exec --no-startup-id flameshot
exec --no-startup-id playerctld daemon
exec --no-startup-id dropbox start
exec --no-startup-id emote
exec --no-startup-id playerctld daemon
exec --no-startup-id blueman-applet

set $connectCheck nm-online --quiet --timeout=300

# Startup applications
exec alacritty --command tmux
exec $connectCheck && google-chrome

exec obsidian
exec weekday && $connectCheck && slack
exec $connectCheck && firefox
# exec $connectCheck && spotify

# vim: ft=i3config
