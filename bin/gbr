#!/usr/bin/env bash

# quickly find a branch, using any part of the name to narrow it down further.
# requires "peco" (`brew install peco`) installed

set -e

cmd='peco --select-1'

if [[ -z "$1" ]]; then
  git branch | cut -c 3- | $cmd | xargs git checkout
else
  git checkout $(git branch | grep $1 | $cmd)
fi
