#!/usr/bin/env bash

set -e

if [ "$1" == "dark" ]; then
  echo "set background=dark" > "$HOME/.colorscheme.vim"
  sed -i 's/\*themeLight/*themeDark/g' ~/code/dotfiles/alacritty.yml
else
  echo "set background=light" > "$HOME/.colorscheme.vim"
  sed -i 's/\*themeDark/*themeLight/g' ~/code/dotfiles/alacritty.yml
fi

# $EDITOR ~/code/dotfiles/alacritty.yml +$
