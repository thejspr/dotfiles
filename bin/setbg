#!/usr/bin/env bash

set -e

if [ "$1" == "dark" ]; then
  sed -i'.bak' 's/background=light/background=dark/g' ~/code/dotfiles/vimrc
  sed -i'.bak' 's/\*themeLight/*themeDark/g' ~/code/dotfiles/alacritty.yml
else
  sed -i'.bak' 's/background=dark/background=light/g' ~/code/dotfiles/vimrc
  sed -i'.bak' 's/\*themeDark/*themeLight/g' ~/code/dotfiles/alacritty.yml
fi
