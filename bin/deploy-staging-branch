#!/usr/bin/env bash

set -e

branch=$1

if [ -z "$branch" ]
then
  branch="$(git rev-parse --abbrev-ref HEAD)"
fi

# read -p "Deploy branch: $branch ?" -n 1 -r
# echo
REPLY=y

if [[ $REPLY =~ ^[Yy]$  ]]
then
  git checkout staging
  git pull
  git merge $branch --no-edit
  git push

  bundle exec cap staging deploy

  git checkout $branch
else
  echo "aborting..."
fi
